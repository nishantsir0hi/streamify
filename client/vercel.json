{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "outputDirectory": "dist",
  "nodeVersion": "18.x",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://streamify-backend.onrender.com/api/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
